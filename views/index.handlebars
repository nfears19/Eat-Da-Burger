<h1 class="mainHeader">Eat Da Burger!</h1>

<div class= "row">
    <div class="card col-6">
        <h2>Available Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
    </div>

    <div class="card col-6">
        <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
    </div>
</div>

<div class="row">
<div class= "col-4"></div>
<div class="form card col-4">
    <h2>Add a Burger</h2>
    <form id="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit">Add Burger</button>
    </form>
</div>
<div class= "col-4"></div>
</div>